\usepackage{suffix}
\makeatletter
\newcommand\@enclose[3]{#1{#3}#2}
\newcommand\@@enclose[3]{\left#1{#3}\right#2}
\newcommand\en{\@ifstar\@@enclose\@enclose}
\makeatother
\newcommand{\defenclose}[3]{
\expandafter\newcommand\csname #1\endcsname[1]{\en#2#3{##1}}
\WithSuffix\expandafter\newcommand\csname #1\endcsname *[1]{\en*#2#3{##1}}
}

\defenclose{op}()
\defenclose{abs}||
\defenclose{norm}\|\|
